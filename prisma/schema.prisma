generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement()) @unique
  username    String  @unique 
  firstName   String
  lastName    String
  password    String
  accounts    Accounts[]
}

model Accounts {
  id         Int      @id @default(autoincrement())     
  balance    Int
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @unique
}
